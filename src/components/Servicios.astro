---
import { servicios } from "../data.json";
import Card from "../components/utils/Card.astro";
---

<div  id="servicios" class=" inset-0 -z-10 min-h-full w-full bg-white bg-[linear-gradient(to_right,#f0f0f0_1px,transparent_1px),linear-gradient(to_bottom,#f0f0f0_1px,transparent_1px)] bg-[size:6rem_4rem]">
<section class=" bottom-0 left-0 right-0 top-0 bg-[radial-gradient(circle_800px_at_100%_200px,#d5c5ff,transparent)]mb-8">
  <h2 class="text-2xl text-center">Nuestros Servicios</h2>
  <div class="servicios">
    {
      servicios &&
        servicios.map(({name,desc,imgUrl}) => {
          return <Card name={name} desc={desc} imgUrl={imgUrl}/>;
        }).slice(0,4)
    }
  </div>
</section>
</div>

<style>
  .servicios{
    display: grid;
    grid-template-columns: repeat(auto-fit,minmax(400px,1fr));
    gap: 1rem;
  }
</style>