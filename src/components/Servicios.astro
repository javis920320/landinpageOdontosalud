    .wrapper {
      display: grid;
      grid-auto-flow: column;
      grid-template-columns: repeat(
        auto-fit,
        minmax(15rem, 1fr)
      ); /* Adjusts column width based on content */
      place-content: center;
      justify-items: center;
      width: 90%; /* Fixed width for the grid */
    }

    @keyframes scroll {
      to {
        translate: -30rem; /* Matches total width of wrapper (15rem) * 2 */
      }
    }

    .wrapper {
      animation: scroll 15s linear infinite;
    }

    /* Resume animation onmouseout */
    .services:hover {
      pointer-events: auto; /* Allows animation to resume on mouseout */
