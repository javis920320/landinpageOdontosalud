---
import { servicios } from "../data.json";
---



<div class="tag-list">
    <div class="inner">
      {
        servicios &&
          servicios.map(({ name }) => (
            <div class="tag">
              <span>#</span>
              {name}
            </div>
          ))
      }
      <div class="fade"></div>
    </div>
  </div>
  
  <style>
    .tag-list {
      margin: 0 auto;
      width: 80%;
      font-weight: 400;
      font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif,
       'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
       
      position: relative;
      overflow: hidden;
    }
    .inner {
      width: fit-content;
      display: flex;
      gap: 1rem;
      animation: loop 30s linear infinite;
    }

    .tag {
      color: rgb(102, 106, 128);
      width: 200px;
      display: flex;
      align-items: center;
      gap: 0 0.2rem;
      font-size: 1.25rem;
      background-color: #f2f7f5;
      padding:;
      border-radius: 0.4rem;
      box-shadow:
        0 0.1rem 0.2rem #9ca0a033,
        0 0.1rem 0.5rem #f0e7e74d,
        0 0.2rem 1.5rem #cfcdcd66;
  
    }

    .tag span {
      font-size: 1.10rem;
      color: rgb(12, 107, 190);
    }
    .fade {
      position: absolute;
      background: linear-gradient(80deg, #b6b8b8, transparent 20%, #e4e4e4);
      inset: 0;
      pointer-events: none;
    }

    @keyframes loop {
      0% {
        transform: translateX(0);
      }
      100% {
        transform: translateX(-50%);
      }
    }
  
  </style>